<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SubmissionJetpack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appbarColor</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/appbarColor</item>
    </style>

    <style name="title_splash" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="text_item_card_bold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_item_card_regular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="maxLines">3</item>
    </style>

    <style name="text_detail_name" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_detail_bold_14sp" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_detail_bold_16sp" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_detail_regular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>